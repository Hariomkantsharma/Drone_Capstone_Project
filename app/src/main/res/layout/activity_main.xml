<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gg_afa"
    >


    <TextView
        android:id="@+id/connection_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection Status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/black"
        android:layout_marginLeft="30dp"
        android:alpha="0.8"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/Log_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message Log"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/connection_status"
        android:background="@color/black"
        android:layout_marginLeft="30dp"
        android:alpha="0.8"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/received_data_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/Log_text"
        android:layout_marginTop="10dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingStart="16dp"
        android:alpha="0.8"
        android:background="@color/semi_transparent_black"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:paddingEnd="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:id="@+id/rl1"
        android:alpha="0.8"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/received_data_list"
        android:layout_marginTop="20dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Temperature_Text"

            android:text="Temperature :"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Temperature_value"
            android:layout_toRightOf= "@+id/Temperature_Text"
            android:text="Temp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@color/black"

            android:alpha="0.8"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:id="@+id/rl2"
        android:alpha="0.8"
        android:textAlignment="center"
        android:textColor="@color/white"

android:paddingBottom="10dp"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="20dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Humidity_Text"

        android:layout_marginTop="20dp"
        android:text="Humidity :"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/black"
        android:layout_marginLeft="30dp"

        android:textColor="@color/white"

        android:paddingBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Humidity_value"

        android:layout_toRightOf= "@+id/Humidity_Text"
        android:text="%"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@color/black"

        android:alpha="0.8"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"


        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:alpha="0.8"
        android:textAlignment="center"
        android:textColor="@color/white"

android:paddingBottom="10dp"
        android:layout_below="@+id/rl2"
        android:layout_marginTop="20dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gas_Text"

        android:text="Gas :"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@color/black"
        android:layout_marginLeft="30dp"

        android:textColor="@color/white"

        android:paddingBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gas_value"

        android:layout_toRightOf= "@+id/Gas_Text"
        android:text="quality"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:alpha="0.8"
        android:textAlignment="center"
        android:textColor="@color/white"


        />
    </RelativeLayout>
</RelativeLayout>
